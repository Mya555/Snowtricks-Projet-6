
<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Tricks web site">
        <meta name="author" content="Jimmy Sweat">
        <title>{% block title %}Jimmy's Tricks{% endblock %}</title>
        <!-- Bootstrap core CSS -->
        {% block stylesheets %}
            <!-- Slylesheet for comment -->
            <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
            <!-- Bootstrap CDN -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
            <!-- Custom fonts for this template -->
            <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">
            <!-- Custom styles for this template -->
            <link href="{{ asset('css/business-casual.css')}}" rel="stylesheet">
            <link href="{{ asset('css/lightbox.css')}}" rel="stylesheet">
            <link href="{{ asset('css/login.css')}}" rel="stylesheet">
        {% endblock %}
    </head>

    <body>
    {% block body %}
            {% block navigation %}
                <!-- Navigation -->
                <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
                    <div class="container">
                        <a class="navbar-brand text-uppercase text-expanded font-weight-bold" href="/liste_add">Jimmy's Tricks</a>
                        <div class="collapse navbar-collapse" id="navbarResponsive">
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item active px-lg-4">
                                    <a class="nav-link text-uppercase text-expanded" href="/liste_add">Home
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="{{ path('add') }}">Ajouter</a>
                                    </li>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="/login">Sign In</a>
                                    </li>
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="/register">Sign Up</a>
                                    </li>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="/logout">Logout</a>
                                    </li>
                                    <li>
                                         <div>
                                          x
                                        </div>
                                     </li>
                                    <li>
                                        <div id=container>
                                           <a href="{{ path('update_user', {'id': app.user.id}) }}">
                                               {% if app.user.avatar|length > 0 %}<img src="/uploads/{{ app.user.avatar }}" id="avatar" width="250" draggable="false"/></a>{% else %}<img src="{{ asset('img/icon.png')}}" id="avatar" width="250" draggable="false"/>{% endif %}
                                            </a>
                                        </div>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </nav>

                {% if app.session.flashBag.has('notice') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {% for msg in app.session.flashBag.get('notice') %}
                        {{ msg }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    {% endfor %}
                </div>
                {% endif %}

            {% endblock %}

            {% block content %}{% endblock %}

            {% block footer %}


        <!--Footer-->

        <div class="copyright">
            <div class="container">

                <div class="row text-center">
                    <p>Copyright &copy; Jimmy's Tricks 2018 | Tous droits résérvés</p>
                </div>

            </div>
        </div>


        {% endblock %}






            {% block javascripts %}
                    <!-- Les flocons de neiges -->
                <script type="text/javascript" src="{{ asset('vendor/jquery/snow.js') }}"></script>
                <script type="text/javascript">window.onload = function(){snow.init(30);};</script>
                    <!--Les tags-->
                <script type="text/javascript" src="{{ asset('vendor/jquery/images.js') }}"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
                <script src="{{ asset('vendor/jquery/jquery.min.js')}}"></script>
                <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
                    <!-- flèche pour remonter -->
                <script type="text/javascript" src="{{ asset('vendor/js/arrow.js') }}"></script>
                <!-- L'agrandissement des images -->
                <script type="text/javascript" src="{{ asset('vendor/jquery/lightbox.js') }}">
                        lightbox.option({
                            'alwaysShowNavOnTouchDevices' : true
                        })
                    </script>
            {% endblock %}
        {% endblock %}
    </body>
</html>
























