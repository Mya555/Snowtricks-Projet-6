
<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Tricks web site">
        <meta name="author" content="Jimmy Sweat">
        <title>{% block title %}Jimmy's Tricks{% endblock %}</title>
        {% block stylesheets %}
            <!-- Slylesheet for comment -->
            <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
            <!-- Bootstrap CDN -->
            <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
            <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
            <!-- Custom fonts for this template -->
            <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">
            <!-- Custom styles for this template -->
            <link href="{{ asset('css/business-casual.css')}}" rel="stylesheet">
            <link href="{{ asset('css/lightbox.css')}}" rel="stylesheet">
            <link href="{{ asset('css/login.css')}}" rel="stylesheet">
        {% endblock %}
    </head>

    <body>
    {% block body %}
            {% block navigation %}
                <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
                    <div class="container">
                        <!-- Navigation petit écran -->
                        <nav class="navbar navbar-toggleable-sm dropdown petit-menu" >
                            <h2 data-toggle="dropdown"><span class="badge badge-info">Menu</span></h2>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('homepage') }}">Accueil</a>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <a class="dropdown-item" href="{{ path('update_user', {'id': app.user.id}) }}">Avatar</a>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <a class="dropdown-item" href="{{ path('add') }}">Ajouter</a>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
                                    <a class="dropdown-item" href="{{ path('login') }}">Login</a>
                                    <a class="dropdown-item" href="{{ path('user_registration') }}">S'inscrire</a>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <a class="dropdown-item" href="{{ path('logout') }}">Sortir</a>
                                {% endif %}
                            </div>
                        </nav>
                        <!-- fin navigation petit écran -->

                        <a class="navbar-brand text-uppercase text-expanded font-weight-bold" href="{{ path('homepage') }}">Jimmy's Tricks</a>
                        <div class="collapse navbar-collapse" id="navbarResponsive">
                            <ul class="navbar-nav mx-auto">
                                    <li class="nav-item active px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="{{ path('homepage') }}">Accueil
                                            <span class="sr-only">(current)</span>
                                        </a>
                                    </li>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="{{ path('add') }}">Ajouter</a>
                                    </li>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="{{ path('login') }}">S'authentifier</a>
                                    </li>
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="{{ path('user_registration') }}">S'enregistrer</a>
                                    </li>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="nav-item px-lg-4">
                                        <a class="nav-link text-uppercase text-expanded" href="{{ path('logout') }}">Sortir</a>
                                    </li>
                            </ul>
                            <div class="row user_row">
                                <!-- nom d'utilisateur -->
                                    <div class="">
                                        <h2 class="user">
                                            <p>{{ app.user.username }}</p>
                                        </h2>
                                    </div>
                                <!-- fin nom d'utilisateur -->
                                <!-- avatar -->
                                    <div id=container class="user_avatar">
                                        <a href="{{ path('update_user', {'id': app.user.id}) }}">
                                            {% if app.user.avatar|length > 0 %}
                                                <img src="/uploads/{{ app.user.avatar }}" id="avatar" width="250" draggable="false"/></a>
                                            {% else %}
                                                <img src="{{ asset('img/icon.png')}}" id="avatar" width="250" draggable="false"/>
                                            {% endif %}
                                        </a>
                                    </div>
                                <!-- fin avatar -->
                            </div>
                                {% endif %}
                        </div>

                    </div>
                </nav>
                <!-- fin navigation grand écran -->

                <!-- FlashBag -->
                {% if app.session.flashBag.has('notice') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {% for msg in app.session.flashBag.get('notice') %}
                    {{ msg }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {% endfor %}
                </div>
                {% endif %}
                <!-- fin flashBag -->
            {% endblock %}

            {% block content %}{% endblock %}

            {% block footer %}
            <!--Footer-->
            <div class="copyright">
                <div class="container">
                    <div class="row text-center">
                        <p id="copyright-text">Copyright &copy; Jimmy's Tricks 2018 | Tous droits résérvés</p>
                    </div>
                </div>
            </div>
            {% endblock %}

            {% block javascripts %}
                <!-- menu déroulant -->
                <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.0/umd/popper.min.js"></script>
                <script src="js/bootstrap.min.js"></script>
                <script> $('h1').mouseover(function() {$(this).dropdown('toggle')})</script>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
                <script src="{{ asset('vendor/jquery/jquery.min.js')}}"></script>
                <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
                <!-- Les flocons de neiges -->
                <script type="text/javascript" src="{{ asset('vendor/js/snow.js') }}"></script>
                <!--Les tags-->
                <script type="text/javascript" src="{{ asset('vendor/js/images.js') }}"></script>
                <!-- flèche pour remonter -->
                <script type="text/javascript" src="{{ asset('vendor/js/arrow.js') }}"></script>
                <!-- L'agrandissement des images -->
                <script type="text/javascript" src="{{ asset('vendor/js/lightbox.js') }}">
                        lightbox.option({'alwaysShowNavOnTouchDevices' : true})</script>
            {% endblock %}
        {% endblock %}
    </body>
</html>
























