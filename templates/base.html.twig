            <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">

            <!-- Custom styles for this template -->
            <link href="{{ asset('css/business-casual.css')}}" rel="stylesheet">

        {% endblock %}
    </head>
    <body>
    {% block body %}

        {% block navigation %}
            <!-- Navigation -->
            <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
                <div class="container">
                    <a class="navbar-brand text-uppercase text-expanded font-weight-bold" href="#">Jimmy's Tricks</a>

                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item active px-lg-4">
                                <a class="nav-link text-uppercase text-expanded" href="">Home
                                    <span class="sr-only">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item px-lg-4">
                                <a class="nav-link text-uppercase text-expanded" href="about.html">Tricks</a>
                            </li>
                            <li class="nav-item px-lg-4">
                                <a class="nav-link text-uppercase text-expanded" href="products.html">Sign In</a>
                            </li>
                            <li class="nav-item px-lg-4">
                                <a class="nav-link text-uppercase text-expanded" href="store.html">Sign Up</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block content %}{% endblock %}

        {% block footer %}
            <footer class="footer text-faded text-center py-5">
                <div class="container">
                    <p class="m-0 small">Copyright &copy; Jimmy's Tricks 2018</p>
                </div>
            </footer>
        {% endblock %}





        {% block javascripts %}
            <!-- Les flocons de neiges -->
        <script type="text/javascript" src="{{ asset('vendor/jquery/snow.js') }}"></script>
        <script type="text/javascript">
            window.onload = function(){
                snow.init(30);
            };
        </script>


            <script src="{{ asset('vendor/jquery/jquery.min.js')}}"></script>
            <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
        {% endblock %}
    {% endblock %}
    </body>
</html>
























