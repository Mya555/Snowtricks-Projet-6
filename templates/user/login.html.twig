{% extends 'base.html.twig' %}

{% block content %}

  <section class="page-section about-heading login-border bannier">
        <div class="container">
            <div class="about-heading-content">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 mx-auto">
                        <div class="log bg-faded  rounded p-5">
                            <h2 class="section-heading mb-4">
                                <span class="section-heading-lower">Connexion</span>
                            </h2>
                            <div class="well">
                                <div class="login">
                                    <div class="container">
                                            <div class="inner-form">
                                                <form role="form"  action="{{ path('login') }}" method="post">
                                                    <div class="col-md-12 col-sm-12 textup">
                                                        <input value="{{ last_username }}" type="text" class="form-control-signup" name="_username"   placeholder="Login">
                                                    </div>
                                                    <div class="col-md-12 col-sm-12 textup">
                                                        <input type="password" class="form-control-signup"  name="_password"  placeholder="Mot de passe">
                                                    </div>
                                                    <div class="col-md-12 col-sm-12 textup">
                                                       <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                                       <button type="btn" class="btn-signup form-control">Se connecter</button><br>
                                                    </div>
                                                </form>
                                            </div> <!-- Message d'erreur-->
                                            <div class="col-md-12 col-sm-12 textup erreur">
                                                {% if error %}
                                                      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                                {% endif %}
                                             </div>
                                        <p>Pas encore inscrit?<a class="lien-login" href="{{ path('user_registration') }}">S'inscrire</a></p>
                                        <p><a class="lien-login" href="{{ path('forgot') }}">Mot de passe oubli√©?</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

{% endblock %}
