{% extends 'base.html.twig' %}

{% block content %}

<section class="page-section about-heading login-border bannier">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-6 col-lg-6 mx-auto">
                    <div class="log bg-faded  rounded p-5">
                        <h5>
                            Réinitialisation du mot de passe
                        </h5>
                        <div class="well">
                            <div class="login">
                                <div class="container">
                                    <div class="regist-border">
                                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                                        <div class="form-group">
                                            <div class="row">
                                                {# Affichage des erreurs pour ce champ précis. #}
                                                {{ form_errors(form.email) }}
                                                <div class="col-sm-10">
                                                    {# Génération de l'input. #}
                                                    {{ form_widget(form.email, {'attr': {'class': ' regist col-sm-12', 'placeholder': 'Email '}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                {# Affichage des erreurs pour ce champ précis. #}
                                                {{ form_errors(form.password.first) }}
                                                <div class="col-sm-10">
                                                    {# Génération de l'input. #}
                                                    {{ form_widget(form.password.first, {'attr': {'class': 'regist col-sm-12', 'placeholder': 'Mot de passe '}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                {# Affichage des erreurs pour ce champ précis. #}
                                                {{ form_errors(form.password.second) }}
                                                <div class="col-sm-10">
                                                    {# Génération de l'input. #}
                                                    {{ form_widget(form.password.second, {'attr': {'class': 'regist regist-border-2 col-sm-12 ', 'placeholder': 'Confirmation du mot de passe '}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button class="btn btn-primary" type="submit">Envoyer</button>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
