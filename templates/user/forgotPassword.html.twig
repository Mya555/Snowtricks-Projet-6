{% extends 'base.html.twig' %}

{% block content %}

    <section class="page-section about-heading login-border bannier" xmlns="http://www.w3.org/1999/html">
        <div class="container">
            <div class="about-heading-content">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 mx-auto">
                        <div class="log bg-faded  rounded p-5">
                            <h2 class="section-heading mb-4">
                                Mot de passe oublié
                            </h2>
                            <div class="well">
                                <div class="login">
                                    <div class="container">
                                        <div class="inner-form">
                                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                                            <div class="form-group">
                                                <div class="row">
                                                    {# Affichage des erreurs pour ce champ précis. #}
                                                    {{ form_errors(form.username) }}
                                                    <div class="col-sm-10">
                                                        {# Génération de l'input. #}
                                                        {{ form_widget(form.username, {'attr': {'class': 'regist regist-border col-sm-10',  'placeholder': 'Login ' }}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <button class="btn btn-primary" type="submit">Envoyer</button>
                                            </div>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}