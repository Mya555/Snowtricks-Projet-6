{% extends 'base.html.twig' %}

{% block content %}

    <section class="page-section about-heading login-border bannier">
        <div class="container">
            <div class="about-heading-content">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 mx-auto">
                        <div class="log bg-faded  rounded p-5">
                            <h2 class="section-heading mb-4">
                                <span class="section-heading-lower">Mot de passe oubli√©</span>
                            </h2>
                            <div class="well">
                                <div class="login">
                                    <div class="container">
                                        <div class="inner-form">
                                            <form role="form"  action="{{ path('') }}" method="post">
                                                <div class="col-md-12 col-sm-12 textup">
                                                    <input value="{{ last_username }}" type="text" class="form-control-signup" name="_username"   placeholder="Username">
                                                </div>
                                                <div class="col-md-12 col-sm-12 textup">
                                                    <button type="btn" class="btn-signup form-control">ask for reset password</button><br>
                                                </div>
                                            </form>
                                        </div> <!-- Message d'erreur-->
                                        <div class="col-md-12 col-sm-12 textup erreur">
                                            {% if error %}
                                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}